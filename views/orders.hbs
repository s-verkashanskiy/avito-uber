<form method="POST", action="/orders/filter">
  <label>Категория</label>
  <select id="selectCategory" class="browser-default" name="category">
    <option></option>
    {{#each category}}
    <option value={{_id}}>
      {{title}}
    </option>
    {{/each}}
  </select>

  <label>Услуга</label>
  <select id="selectSkill" class="browser-default" name="skill">
    <option></option>
    {{#each firstCat.skills}}
    <option value={{_id}}>
      {{title}}
    </option>
    {{/each}}
  </select>
  <button id="chooseSkill">Применить</button>
</form>
<br />
<br />



<div style="display: flex;justify-content: space-between; flex-wrap: wrap;width: 900px;">

    {{#each orders}}
      <ul style="border:solid black 2px; width:400px;padding: 10px;box-shadow: 0 0 10px" id={{id}}>
        <li><b>Тема заказа: </b>{{this.title}}</li>
        <li><b>Описание заказа: </b>{{this.description}}</li>
        <li><b>Выполнить до: </b>{{this.expirationDate}}</li>
        {{#if ../isAuth}}
          <button id="doResponse">Откликнуться</button> <span id="alert{{this.id}}"> </span>
        {{else}}
          <a href="/login"><button>Откликнуться</button></a>
        {{/if}}
        <br/>
      </ul>
    {{/each}}

</div>


