<script defer src="/js/executor.js"></script>

<div class="page-header">
    <h1>Услуги</h1>
</div>

<div>Фильтр специалистов:</div>
<select id="selectCategory">
    {{#each category}}
    <option value={{_id}}>
      {{title}}
    </option>
    {{/each}}
  </select>

  <select id="selectSkill">
    {{#each firstCat.skills}}
    <option value={{_id}}>
      {{title}}
    </option>
    {{/each}}
  </select>
  <button id="chooseSkill">Применить</button>
<br />
<br />

<div class="container row">

    {{#each users}}
      <ul>
        <li><b>Имя специалиста: </b>{{this.username}}</li>
        <li><b>Местоположение: </b>{{this.city}}</li>
        <li><b>Скиллы: </b>{{this.skills}}</li>
        <br/>
      </ul>
    {{/each}}

</div>
