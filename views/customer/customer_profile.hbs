
<form method='post' action="/customer/profile">
<h4>Имя</h4>
<input type='text' name='name' value={{this.username}}>
<h4>Город</h4>
<input type='text' name='city' value={{this.city}}>
<h4>Телефон</h4>
<input type='text' name='phone' value="{{this.phone}}" placeholder="900-000-0000">
<h4>О себе</h4>
<textarea name='story'> {{this.story}}</textarea>
<button type='submit'>Enter</button>
</form>

<p>{{message}}</p>

<form 
      id='uploadForm' 
      enctype = "multipart/form-data" 
      action='/customer/profile/upload' 
      method='post' >
        <input type="file" name="sampleFile" />
        <input type='submit' value='Upload!' />
    </form>    

