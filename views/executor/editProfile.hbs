<div class="main">

  <div>

    <div style="min-height: 250px; min-width: 250px;">
      <img src={{executor.avatar}} alt="eto {{executor.username}}">
    </div>
    <form id="uploadForm" enctype="multipart/form-data" action="/executor/avatar" method="post">
      <input type="file" name="userFile" required>
      <input type="submit" value="загрузить" name="submit">
    </form>

    <form action="/executor" id="executorForm" method="post">

      <span>Имя: </span><input type="text" name="name" value="{{executor.username}}"><br>
      <span>Город: </span><input type="text" name="city" value="{{executor.city}}"><br>
      <span> О себе: </span><br>
      <textarea name="story" id="" cols="30" rows="10">{{executor.story}}</textarea><br>
    </form>
  </div>

    <span>Скилы: </span><br>

  <div style="display: flex; justify-content: space-between;" >


    <div id="skillsList">
      {{#each skillsArr}}
      <div id="{{id}}" class="category">
        <b>{{title}}</b><br>
        {{#each skills}}
          <span id={{id}} class="skill">
           |<a href="" class="deleteSkill">X</a>|{{title}}
          <span calass="price">{{price}} $</span>
          <br>
          </span>
        {{/each}}
      </div>
      {{/each}}
    </div>

    <form style="border:solid black 2px;padding: 10px" name="addSkillForm">

      <label for="selectCategory">категория:</label>
      <select name="category" id="selectCategory" class="browser-default" required>
        {{#each category}}
        <option value={{_id}}>
          {{title}}
        </option>
        {{/each}}
      </select>
      <label for="selectSkill">скилл:</label>
      <select name="skill" id="selectSkill" class="browser-default" required>
        {{#each firstCat.skills}}
        <option value={{_id}}>
          {{title}}
        </option>
        {{/each}}
      </select>
      <label for="price">цена:</label>
      <input type="number" name="price" id="price" required>

      <input type="submit" name="addSkill" id="addSkill" value="Добавить скилл">


    </form>

  </div>

  <input name="editProfile" type="submit" form="executorForm" value="готово">



</div>

</div>