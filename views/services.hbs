<script defer src="/js/executor.js"></script>

<div class="page-header">
  <h1>Услуги</h1>
</div>

<div>Фильтр специалистов:</div>
<br />

<form method="POST" , action="/services/filter">
  <label>Категория</label>
  <select id="selectCategory" class="browser-default" name="category">
    <option></option>
    {{#each category}}
    <option value={{_id}}>
      {{title}}
    </option>
    {{/each}}
  </select>

  <label>Услуга</label>
  <select id="selectSkill" class="browser-default" name="skill">
    <option></option>
    {{#each firstCat.skills}}
    <option value={{_id}}>
      {{title}}
    </option>
    {{/each}}
  </select>
  <button id="chooseSkill">Применить</button>
</form>
<br />
<br />



<div style="display: flex;justify-content: space-between; flex-wrap: wrap;width: 950px;">


  {{#each users}}
  <div style="display: flex; border:solid black 2px; width: 450px;box-shadow: 0 0 10px; margin:10px">

    <div  style="width: 150px;">
      <img  style="width: 150px;" src="{{this.avatar}}" alt="{{this.username}}">

    </div>

    <ul  id={{id}}>
      <li><b>Имя специалиста: </b>{{this.username}}</li>
      <li><b>Местоположение: </b>{{this.city}}</li>
      <li><b>Скиллы: </b>{{this.skills}}</li>
      {{#if ../isAuth}}
      <button id="doResponseToExecutor">Выбрать специалиста</button>
      {{else}}
      <a href="/login"><button>Выбрать специалиста</button></a>
      {{/if}}
      <br />
    </ul>

  </div>


  {{/each}}
</div>